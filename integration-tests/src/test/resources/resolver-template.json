              "type":"keyword"
            },
            "name":{
              "type":"keyword"
            }
          }
        },
        "memory":{
          "properties":{
            "total":{
              "type":"long"
            },
            "usage":{
              "type":"double"
            },
            "free":{
              "type":"long"
            }
          }
        },
        "resolver_id":{
          "type":"long"
        },
        "cpu":{
          "properties":{
            "usage":{
              "type":"double"
            },
            "count":{
              "type":"long"
            }
          }
        },
        "hdd":{
          "properties":{
            "total":{
              "type":"long"
            },
            "usage":{
              "type":"double"
            },
            "free":{
              "type":"long"
            }
          }
        },
        "client_id":{
          "type":"long"
        },
        "error_messages":{
          "type":"object"
        },
        "platform":{
          "type":"keyword"
        },
        "docker":{
          "properties":{
            "Components":{
              "properties":{
                "Details":{
                  "properties":{
                    "KernelVersion":{
                      "type":"keyword"
                    },
                    "ApiVersion":{
                      "type":"keyword"
                    },
                    "GitCommit":{
                      "type":"keyword"
                    },
                    "Os":{
                      "type":"keyword"
                    },
                    "Experimental":{
                      "type":"keyword"
                    },
                    "MinAPIVersion":{
                      "type":"keyword"
                    },
                    "Arch":{
                      "type":"keyword"
                    },
                    "GoVersion":{
                      "type":"keyword"
                    },
                    "BuildTime":{
                      "type":"keyword"
                    }
                  }
                },
                "Version":{
                  "type":"keyword"
                },
                "Name":{
                  "type":"keyword"
                }
              }
            },
            "KernelVersion":{
              "type":"keyword"
            },
            "ApiVersion":{
              "type":"keyword"
            },
            "GitCommit":{
              "type":"keyword"
            },
            "Os":{
              "type":"keyword"
            },
            "Platform":{
              "properties":{
                "Name":{
                  "type":"keyword"
                }
              }
            },
            "Version":{
              "type":"keyword"
            },
            "MinAPIVersion":{
              "type":"keyword"
            },
            "Arch":{
              "type":"keyword"
            },
            "GoVersion":{
              "type":"keyword"
            },
            "BuildTime":{
              "type":"keyword"
            }
          }
