{
  "order":0,
  "index_patterns":[
    "resolver-*"
  ],
  "settings":{
    "index":{
      "number_of_shards":"3",
      "refresh_interval":"5s"
    }
  },
  "mappings":{
    "sysinfo":{
      "numeric_detection":true,
      "dynamic_templates":[
        {
          "string_fields":{
            "mapping":{
              "omit_norms":true,
              "type":"keyword"
            },
            "match_mapping_type":"string",
            "match":"*"
          }
        }
      ],
      "date_detection":true,
      "properties":{
