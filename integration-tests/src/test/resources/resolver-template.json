        "system":{
          "type":"keyword"
        },
        "containers":{
          "properties":{
            "resolver":{
              "type":"keyword",
              "eager_global_ordinals":true
            },
            "logrotate":{
              "type":"keyword",
              "eager_global_ordinals":true
            },
            "lr-agent":{
              "type":"keyword",
              "eager_global_ordinals":true
            },
            "logstream":{
              "type":"keyword",
              "eager_global_ordinals":true
            },
            "passivedns":{
              "type":"keyword",
